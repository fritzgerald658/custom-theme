<h1>My Shop</h1>
{% assign collection = collections['all'] %}
<div class="card-parent-container">
{% for product in collection.products %}
        <div class="card-container" onclick="window.location.href = '{{ product.url }}'" style="cursor:pointer;">
            {% for image in product.images %}    
                <div class="card-top">
                    <img src="{{ image.src |  image_url : width:100, height:100 }}" 
                    width="{{ image.width }}" 
                    height="{{ image.height }}" alt="">
                </div>
            {% endfor %}
            <div class="card-body">
                    <h2 class="product-title">{{ product.title }}</h2>
                    <h3 class="product-description">{{ product.description }}</h3>
                    <p class="product-price">{{ product.price |  money_with_currency  }}</p>
                    <button>Add to Cart</button>
            </div>
        </div>
    {% endfor %}
</div>

