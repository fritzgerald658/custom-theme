<h1>{{shop.name}}</h1>

{%  assign  collection = collections['first-collection'] %}
<h1>{{collection.title}}</h1>

{% for product in collection.products %}
    <a style={{settings.link_color}} href={{product.url}}>{{product.title}} - {{product.price |  money}} - 
        {% unless product.available %}
            (SOLD OUT)
        {% endunless %}
    </a>
    <h1>{{product.url }}</h1>
{% endfor %}
