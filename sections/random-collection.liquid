{%  assign  collection = collections['first-collection'] %}
<h1>{{collection.title}}</h1>

{% for product in collection.products %}
    {% if section.settings.hide_sold_out != true and product.available != true %}
    <a style="color: {{settings.link_color}}" href={{product.url}}>{{product.title}} - {{product.price |  money}} - 
        {% if product.available != true %}
            (SOLD OUT)
        {% endif %}
    </a>
    {% endif %}
{% endfor %}

{%  schema %}
    {
        "name": "Random Collection",
        "settings": [
            {
                "type": "checkbox",
                "id": "hide_sold_out",
                "label" : "Hide sold out products",
                "default": false
            }
            
        ]
    }
{% endschema %}